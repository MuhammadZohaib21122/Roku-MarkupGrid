<?xml version="1.0" encoding="UTF-8"?>
<component name="videoScreen" extends="Group">

    <script type="text/brightscript" uri="videoScreen.brs" />


    <customization suspendhandler="customSuspend" />
    <customization resumehandler="customResume" />
    <interface>


        <field id="rowListData" type="node" />
        <field id="exitApp" type="boolean" alwaysNotify="true" />


    </interface>

    <children>

        <Poster width="1920" height="1080" translation="[0,0]" uri="pkg:/images/background.png">
        </Poster>

        <Label
            id="testLabel"
            height="44"
            width="0"
            font="font:MediumBoldSystemFont"
            text="WELLCOME TO VIDEO SCREEN"
            horizAlign="left"
            vertAlign="center"
            color="#00ffb2"
            translation="[350,100]">
            <Font role="font" uri="pkg:/components/Fonts/ChangaOne-Regular.ttf" size="100" />
        </Label>

        <Video id="videoPlayer" visible="true" height="600"
            width="1000" translation="[450,250]" />


    </children>
</component>