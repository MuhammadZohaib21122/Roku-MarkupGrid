<?xml version="1.0" encoding="utf-8"?>

<component name="MarkupGridItem" extends="Group">

    <script type="text/brightscript" uri="markupgriditem.brs" />
    <interface>
        <field id="itemContent" type="node" onChange="showcontent" />
        <field id="focusPercent" type="float" onChange="showfocus" />
    </interface>


    <children>

        <Poster
            id="itemPoster"
            translation="[ 0, 0 ]"
            width="300"
            height="196">

            <Rectangle
                id="itemMask"
                color="0x000000FF"
                opacity="0.75"
                width="300"
                height="196" />

        </Poster>


        <Label
            id="videoTitle"
            text=""
            translation="[6,196 ]"
            horizAlign="left" vertAlign="center"
            width="288" height="40">
            <Font role="font" uri="pkg:/components/Fonts/ChangaOne-Regular.ttf" size="24" />
        </Label>


    </children>

</component>